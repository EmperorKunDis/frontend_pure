---
import {Image} from "astro:assets";
import companyIcon from '../assets/icon-company.svg';
import contactIcon from '../assets/icon-contact.svg';
import hoursIcon from '../assets/icon-hours.svg';
---
<div class="w-full bg-gray-100">
    <div class="container py-10 px-10">
        <div class="w-full flex flex-col md:flex-row space-between justify-center items-center">
            <div class="flex flex-1 flex-col relative p-2">
                <Image width="65" height="65" src={companyIcon} alt="Sídlo firmy PRAUT s.r.o."class="w-5 mb-2"/>
                <h4 class="text-md font-montserrat mb-1 font-bold text-main-gradient">PRAUT s.r.o.</h4>
                <p class="text-sm/3 font-montserrat mb-1">Obrněné brigády 552/33 <br/> Cheb, 350 02 CZ <br/>IČO:
                    22545107
                </p>
            </div>
            <div class="flex flex-1 flex-col relative p-2">
                <Image width="65" height="65" src={contactIcon} alt="Kontakt firmy PRAUT s.r.o."class="w-5 mb-2"/>
                <h4 class="text-md font-montserrat mb-1 font-bold text-main-gradient">Kontakt</h4>
                <p class="text-sm/3 font-montserrat mb-1">
                    <a href="mailto:info@praut.cz" title="napište nám">obchodni@praut.cz</a> <br/><a href="tel:+420910920890">+420 910 920 890</a>
                </p>
            </div>
            <div class="flex flex-1 flex-col relative p-2">
                <Image width="65" height="65" src={hoursIcon} alt="Otevírací doba firmy PRAUT s.r.o."class="w-5 mb-2"/>
                <h4 class="text-md font-montserrat mb-1 font-bold text-main-gradient">Pracovní hodiny</h4>
                <p class="text-sm/3 font-montserrat mb-1">Pracujeme asynchroně<br/>Po - Ne : 08 - 20</p>
            </div>
        </div>
    </div>
</div>
